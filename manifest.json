{
    "manifest_version": 2,
    "name": "STMC Extension",
    "description": "Live block rotation checker, calendar, quick resource links, and notifications.",
    "version": "1.0.1",
    "icons": {"128":"res/imgs/icons/icon_128.png"},
    "browser_action": {
        "default_icon": "res/imgs/icons/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "notifications", "identity", "identity.email", "gcm", "storage", "declarativeContent"],
    "background": { 
        "persistent": false,
        "scripts": ["OneSignal.js", "background.js"] },
    "web_accessible_resources": ["/res/imgs/", "*.png"]
}
